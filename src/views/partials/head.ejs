<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %><% if (typeof subtitle !== 'undefined') { %> - <%= subtitle %><% } %></title>
  <% if (typeof stylesheets !== 'undefined' && Array.isArray(stylesheets)) { %>
    <% stylesheets.forEach(stylesheet => { %>
  <link rel="stylesheet" href="<%= stylesheet %>">
    <% }) %>
  <% } %>
</head>
<body>
  <%
    // Sur les pages admin, lien vers l'accueil ; sinon, lien vers le contenu principal
    const isAdminPage = typeof stylesheets !== 'undefined' && stylesheets.some(s => s.includes('admin.css'));
    const skipHref = isAdminPage ? '/' : '#main-content';
    const skipLabel = isAdminPage ? "Retour Ã  l'accueil" : 'Aller au contenu principal';
  %>
  <a href="<%= skipHref %>" class="skip-link"><%= skipLabel %></a>

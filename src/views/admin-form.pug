extends layout

block content
  .admin-form-container
    h1= title
    
    if error
      .alert.alert-error= error
    
    form(method="POST" action=formAction)
      .form-group
        label(for="email") Email
        input#email(type="email" name="email" required value=admin ? admin.email : '' placeholder="admin@batala.fr")
      
      .form-group
        label(for="password") Mot de passe
        input#password(type="password" name="password" required=!admin placeholder="Nouveau mot de passe")
        if admin
          small.text-muted Laissez vide pour conserver le mot de passe actuel
      
      .form-group
        label(for="is_active")
          input#is_active(type="checkbox" name="is_active" checked=admin ? admin.is_active : true)
          |  Compte actif
      
      .form-actions
        button.btn.btn-primary(type="submit") Enregistrer
        a.btn.btn-secondary(href="/admins") Annuler
    
    style.
      .admin-form-container {
        max-width: 600px;
        margin: 2rem auto;
        padding: 2rem;
        border: 1px solid #ddd;
        border-radius: 8px;
        background: #fff;
      }
      .form-group {
        margin-bottom: 1rem;
      }
      .form-group label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: bold;
      }
      .form-group input[type="email"],
      .form-group input[type="password"] {
        width: 100%;
        padding: 0.5rem;
        border: 1px solid #ccc;
        border-radius: 4px;
      }
      .form-group input[type="checkbox"] {
        margin-right: 0.5rem;
      }
      .text-muted {
        color: #6c757d;
        font-size: 0.9rem;
      }
      .form-actions {
        display: flex;
        gap: 1rem;
        margin-top: 1.5rem;
      }
      .btn {
        padding: 0.75rem 1.5rem;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
        font-size: 1rem;
      }
      .btn-primary {
        background: #007bff;
        color: white;
      }
      .btn-primary:hover {
        background: #0056b3;
      }
      .btn-secondary {
        background: #6c757d;
        color: white;
      }
      .alert {
        padding: 1rem;
        margin-bottom: 1rem;
        border-radius: 4px;
      }
      .alert-error {
        background: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
      }

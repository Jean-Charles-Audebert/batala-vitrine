# Exemple de configuration .env pour Batala Vitrine

# --- Base App ---
PORT=3000
NODE_ENV=development

# --- PostgreSQL ---
DB_HOST=localhost
DB_PORT=5432
DB_USER=batala
DB_PASSWORD=batala_password
DB_NAME=batala_vitrine

# --- Authentification ---
JWT_SECRET=change_this_secret
JWT_REFRESH_SECRET=change_this_refresh_secret
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# --- Email (Nodemailer) ---
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=batala@example.com
SMTP_PASSWORD=your_smtp_password
EMAIL_FROM="Batala LR <batala@example.com>"

# --- Divers (optionnel) ---
UPLOAD_DIR=public/uploads

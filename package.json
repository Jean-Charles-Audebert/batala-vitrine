  "description": "[![License](https://img.shields.io/badge/License-Apache%202.0-blue.svg)](LICENSE)\r [![Node.js](https://img.shields.io/badge/node-24.10.0-green)](https://nodejs.org/)\r [![Build Status](https://img.shields.io/github/workflow/status/<username>/<repo>/PR%20checks?label=CI)]()",
  "main": "index.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon --watch src --exec node src/server.js",
    "lint": "eslint .",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config=jest.config.mjs",
    "test:watch": "jest --watch",
    "e2e": "playwright test",
    "seed:test-admin": "node scripts/seed-test-admin.js",
    "seed:block-elements": "node scripts/seed-block-elements.js",
    "build:docker": "docker build -t iouco/batala-vitrine:latest .",
    "lhci:collect": "lhci collect --url=http://localhost:3000",
    "lhci:assert": "lhci assert --assertions.lhr=performance:0.9",
    "db:start": "docker compose up -d db",
    "db:stop": "docker compose stop db",
    "db:reset": "docker compose down -v && docker compose up -d db"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jean-Charles-Audebert/batala-vitrine.git"

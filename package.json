    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.9",
    "pg": "^8.16.3",
    "pug": "^3.0.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "eslint": "^9.37.0",
    "eslint-plugin-n": "^17.23.1",
    "jest": "^30.2.0",
    "lhci": "^4.1.1",
    "nodemon": "^3.1.10",
    "playwright": "^1.56.0"
  }
